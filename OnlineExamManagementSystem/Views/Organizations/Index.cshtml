@model IEnumerable<OnlineExamManagementSystem.Models.Organization>

@{
    Layout = null;
    ViewBag.Title ="Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>


    @Html.ActionLink("Create New", "Create")

<form>
    <fieldset>
        <legend>Index/Organization Search</legend>
        @using (Html.BeginForm())
        {
         <p>

                Name:<br/>@Html.TextBox("searchString")<br/>
                Address:<br/>@Html.TextBox("searchString2")<br/>
                Code:<br/>@Html.TextBox("searchString3")<br/>
                Contact No:<br/> @Html.TextBox("searchString4")
                <input type="submit" value="Search"/>
            </p>
        }
    </fieldset>
</form>
<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About)
            </th>
            
             <th>
                    @Html.DisplayNameFor(model => model.Logo)
             </th>
            
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImgPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                <img src="@Url.Content(item.ImgPath)" width="50" height="50" multiple />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
